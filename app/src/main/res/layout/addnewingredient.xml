<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재료 추가"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="10sp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="right"
                android:text="재료명: "/>
            <Spinner
                android:id="@+id/food_spinner"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5"
            android:layout_marginBottom="10sp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="유통기한: "
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="right"/>
            <EditText
                android:id="@+id/ingre_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/guitar_edit"
                android:hint="2020.01.01꼴로 입력해주세요"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:gravity="center"
            android:layout_marginBottom="10sp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수량: "
                android:textColor="#000000"
                android:textSize="16sp"
                android:gravity="right"/>
            <EditText
                android:id="@+id/ingre_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/guitar_edit"
                android:layout_weight="3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <Button
                android:id="@+id/refre_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="냉장"/>
            <Button
                android:id="@+id/refre_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="냉동"/>
            <Button
                android:id="@+id/outside"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="실온"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="5sp"
            android:text="기타사항"/>
        <EditText
            android:id="@+id/edit_guitar"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textColorHint="#A4A4A4"
            android:textSize="17dp"
            android:background="@drawable/guitar_edit"
            android:layout_margin="5sp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:hint="기타 추가사항을 적으세요"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:id="@+id/ingre_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"/>
            <Button
                android:id="@+id/ingre_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>