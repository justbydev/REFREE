<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10sp"
            app:cardUseCompatPadding="true">
            <TextView
                android:id="@+id/food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginBottom="18sp"
                android:layout_marginTop="10sp"
                android:text="음식명"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재료 정보"
            android:textSize="18sp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="15sp"
            android:textColor="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_marginBottom="18sp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginLeft="15sp"
                android:text="등록일 "/>
            <TextView
                android:id="@+id/register_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:textSize="15sp"
                android:textColor="#0000FF"
                android:layout_marginRight="15sp"
                android:text="등록일"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_marginBottom="18sp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="유통기한"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginLeft="15sp"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="유통기한"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:layout_marginRight="15sp"
                    android:textColor="#0000FF"
                    android:visibility="visible"/>
                <EditText
                    android:id="@+id/edit_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:gravity="right"
                    android:textColor="#0000FF"
                    android:layout_marginRight="15sp"
                    android:textSize="15sp"
                    android:lines="1"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_marginBottom="18sp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수량"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginLeft="15sp"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    android:id="@+id/text_cnt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="수량"
                    android:textColor="#0000FF"
                    android:textSize="15sp"
                    android:gravity="right"
                    android:layout_marginRight="15sp"
                    android:visibility="visible"/>
                <EditText
                    android:id="@+id/edit_cnt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:lines="1"
                    android:textSize="15sp"
                    android:textColor="#0000FF"
                    android:gravity="right"
                    android:layout_marginRight="15sp"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_marginBottom="15sp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="보관방법"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginLeft="15sp"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    android:id="@+id/text_contain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="보관방법"
                    android:textSize="15sp"
                    android:textColor="#0000FF"
                    android:layout_marginRight="15sp"
                    android:gravity="right"
                    android:visibility="visible"/>
                <Spinner
                    android:id="@+id/spinner_contain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/remain_way"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:gravity="center_horizontal" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="15sp"
            android:text="기타사항"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_guitar"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:text="기타사항"
                android:textSize="20dp"
                android:background="@drawable/guitar_edit"
                android:visibility="visible"
                android:layout_margin="5sp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"/>
            <EditText
                android:id="@+id/edit_guitar"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:background="@drawable/guitar_edit"
                android:textSize="20dp"
                android:layout_margin="5sp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:id="@+id/fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="수정"/>
            <Button
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="닫기"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>