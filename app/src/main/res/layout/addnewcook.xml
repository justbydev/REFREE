<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_cook_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:background="@drawable/guitar_edit"
            android:textSize="20sp"
            android:layout_margin="10sp"
            android:hint="요리 이름을 적어주세요"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="재료 선택"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="5sp">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/c0"
                        android:layout_width="80sp"
                        android:layout_height="70sp"
                        android:text="채소"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/c1"
                        android:layout_width="80sp"
                        android:layout_height="70sp"
                        android:text="과일"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/c2"
                        android:layout_width="80sp"
                        android:layout_height="70sp"
                        android:text="육류"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/c3"
                        android:layout_width="80sp"
                        android:layout_height="70sp"
                        android:text="수산"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/c4"
                        android:layout_width="80sp"
                        android:layout_height="70sp"
                        android:text="유제품"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/c5"
                        android:layout_width="80sp"
                        android:layout_height="70sp"
                        android:text="면/만두"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/c6"
                        android:layout_width="80sp"
                        android:layout_height="70sp"
                        android:text="빵/떡"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/c7"
                        android:layout_width="80sp"
                        android:layout_height="70sp"
                        android:text="두부\n/콩/계란"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/c8"
                        android:layout_width="80sp"
                        android:layout_height="70sp"
                        android:text="음료"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/c9"
                        android:layout_width="80sp"
                        android:layout_height="70sp"
                        android:text="튀김"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/c10"
                        android:layout_width="80sp"
                        android:layout_height="70sp"
                        android:text="양념"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/c11"
                        android:layout_width="80sp"
                        android:layout_height="70sp"
                        android:text="기타"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:clickable="true"/>

                </LinearLayout>
            </HorizontalScrollView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="5sp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cook_ingre_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="300sp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선택한 재료"
            android:layout_marginLeft="10sp"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="5sp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cook_myingre_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="150sp"/>
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/brief"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textColorHint="#A4A4A4"
            android:textSize="20dp"
            android:layout_margin="5sp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/guitar_edit"
            android:hint="요리를 간단하게 설명해주세요"/>
        <EditText
            android:id="@+id/recipe"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textColorHint="#A4A4A4"
            android:textSize="20dp"
            android:layout_margin="5sp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/guitar_edit"
            android:hint="레시피를 적으세요"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:id="@+id/cook_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"/>
            <Button
                android:id="@+id/cook_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>